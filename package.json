{
  "name": "enhanced-postgres-mcp-server",
  "version": "0.1.0",
  "description": "Enhanced PostgreSQL MCP server with migration management",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "postgres-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "start": "node dist/index.js",
    "dev": "ts-node-esm src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "docker build -t mcp/postgres .",
    "docker:run": "docker run -i --rm mcp/postgres"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.1.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "postgres",
    "postgresql",
    "database",
    "migrations"
  ],
  "author": "",
  "license": "MIT"
}
